<Page x:Class="Quiz.View.Pages.QuestionsAndAnswers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz.View.Pages"
      mc:Ignorable="d" 
      Background="#02317d"
      Height="830" Width="1200"
      Title="QuestionsAndAnswers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Template="{DynamicResource Button.BrowseBack}"
                    Height="50"
                    Width="60"
                    Margin="9"
                    Background="Transparent"
                    HorizontalAlignment="Left"
                    Command="NavigationCommands.BrowseBack">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Height="26" Source="/Images/003-back.png"/>
                    <Border Grid.Row="1"
                            BorderBrush="Black" 
                            BorderThickness="0 0 0 1">
                        <TextBlock FontSize="15" 
                                   Foreground="White"
                                   Text="Do Tyłu"/>

                    </Border>

                </Grid>
            </Button>
        </StackPanel>
        <Border Margin="7" Grid.Row="1" 
                BorderBrush="Black" 
                BorderThickness="0 1 0 0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pytanie" 
                                            Binding="{Binding Pytanie}"/>
                        <DataGridTextColumn Header="Odpowiedź A"
                                            x:Name="odpA"
                                            Binding="{Binding A}"/>
                        <DataGridTextColumn Header="Odpowiedź B"
                                            x:Name="odpB"
                                            Binding="{Binding B}"/>
                        <DataGridTextColumn Header="Odpowiedź C"
                                            x:Name="odpC"
                                            Binding="{Binding C}"/>
                        <DataGridTextColumn Header="Poprawna odpowiedz to"
                                            DataGridRow.Selected="DataGridTextColumn_Selected"
                                            Binding="{Binding PoprawnaOdpowiedz}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
